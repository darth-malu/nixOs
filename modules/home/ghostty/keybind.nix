[
  # splits
  "ctrl+shift+h=goto_split:left"
  "ctrl+shift+l=goto_split:right"
  "ctrl+shift+j=goto_split:down"
  "ctrl+shift+k=goto_split:up"
  "ctrl+shift+enter=new_split:auto"
  "ctrl+shift>z=toggle_split_zoom"
  "ctrl+shift+up=resize_split:up,10"
  "ctrl+shift+down=resize_split:down,10"
  "ctrl+shift+right=resize_split:right,10"
  "ctrl+shift+left=resize_split:left,10"
  "ctrl+shift+space=close_surface" # genius

  # tabs
  "alt+right=move_tab:1" #1 -right
  "alt+left=move_tab:-1" # left -1
  # "ctrl+shift+enter=new_window"
  "ctrl+alt+enter=new_tab"
  "ctrl+alt+h=previous_tab"
  "ctrl+alt+l=next_tab"

  # clipboard
  "alt+v=paste_from_clipboard"
  "alt+c=copy_to_clipboard"
  "ctrl+shift+s=paste_from_selection"

  "shift+right=adjust_selection:right"
  "shift+left=adjust_selection:left"
  # "ctrl+l=clear_screen" # clear screen + scrollback #NOTE: weird effects
]
